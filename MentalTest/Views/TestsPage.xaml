<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MentalTest.Views"
             x:Class="MentalTest.Views.TestsPage"
             BackgroundColor="#121212"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <AbsoluteLayout>
            <!-- Новый фон -->
            <Image Source="wave_texture.png"
                   Aspect="AspectFill"
                   AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                   AbsoluteLayout.LayoutFlags="All" />

            <!-- Основной контент -->
            <Grid AbsoluteLayout.LayoutBounds="0, 0, 1, 1" AbsoluteLayout.LayoutFlags="All">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <StackLayout Orientation="Horizontal"
                             BackgroundColor="White"
                             HeightRequest="50"
                             Padding="10"
                             VerticalOptions="Start"
                             Grid.Row="0">
                    <ImageButton Source="back_arrow.png"
                                 HorizontalOptions="Start"
                                 VerticalOptions="Center"
                                 WidthRequest="36"
                                 HeightRequest="36"
                                 BackgroundColor="Transparent"
                                 Rotation="180"
                                 Clicked="OnBackButtonClicked" />
                    <Label Text="{Binding SelectedCategory}"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           TextColor="#394758"
                           Margin="10,0,0,0" />
                </StackLayout>

                <!-- Список тестов -->
                <ListView ItemsSource="{Binding TestItems}"
                          ItemSelected="ListView_OnItemSelected"
                          SeparatorVisibility="None"
                          RowHeight="160"
                          BackgroundColor="Transparent"
                          IsVisible="{Binding IsDataLoaded}"
                          VerticalOptions="FillAndExpand"
                          Grid.Row="1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Frame CornerRadius="20"
                                       Padding="16"
                                       Margin="8"
                                       BackgroundColor="#FFFFFF"
                                       HasShadow="True"
                                       Opacity="0.9">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!-- Название теста -->
                                        <Label Text="{Binding title}"
                                               FontSize="22"
                                               FontAttributes="Bold"
                                               TextColor="#121212"
                                               VerticalOptions="Start"
                                               HorizontalOptions="Start" />

                                        <!-- Описание -->
                                        <Label Text="{Binding description}"
                                               FontSize="16"
                                               TextColor="#394758"
                                               MaxLines="2"
                                               LineBreakMode="TailTruncation"
                                               VerticalOptions="End"
                                               HorizontalOptions="Start"
                                               Grid.Row="1" />
                                    </Grid>
                                </Frame>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Сообщение загрузки -->
                <Label Text="Loading data..."
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       IsVisible="{Binding IsDataLoading}"
                       FontSize="Large"
                       TextColor="#FFFFFF"
                       FontAttributes="Bold"
                       Grid.Row="1" />
            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
